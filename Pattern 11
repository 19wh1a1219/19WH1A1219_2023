#include <iostream>
using namespace std;
 
int main() {
	int n;
	cin>>n;
	int mat[2*n][2*n] = {0};
	for(int i=0; i<2*n; i++)
	{
		mat[0][i] = n;
		mat[i][0] = n;
		mat[(2*n) - 1][0] = n;
		mat[0][(2*n) - 1] = n;
	}
	for(int i=1; i<(2*n)-1; i++)
	{
		for(int j=1; j<i; j++)
		{
			mat[i][j] = mat[i-1][j];
		}
		for(int j=i; j<(2*n)-i; j++)
		{
			if(i < n)
			{
				if(j == i || j == (2*n)-i-1){ mat[i][j] = mat[i-1][j]; }
				else{ mat[i][j] = mat[i-1][j] - 1; }
			}
			else
			{
				if(j == i || j == (2*n)-i-1){ mat[i][j] = mat[i-1][j]; }
				else{ mat[i][j] = mat[i-1][j] + 1; }
			}
		}
	}
	for(int i=0; i<2*n; i++)
	{
		for(int j=0; j<2*n; j++)
		{
			cout<<mat[i][j]<<" ";
		}
		cout<<"\n";
	}
	return 0;
}
