     1
   1 2 1
  1 3 3 1
 1 4 6  4 1
1 5 10 10 5 1


#include <bits/stdc++.h>
using namespace std;

int main() {
	int n;
	cin>>n;
	int mat[n][n];
	for(int i=0; i<n; i++)
	{
		for(int j=0; j<n; j++)
		{
			mat[i][j] = 1;
		}
	}
	for(int i=0; i<=n; i++)
	{
		for(int j=0; j<n; j++)
		{
			if((j > (n/2 - i)) || (j < (n/2) + i)){ mat[i][j] = mat[i-1][j] + mat[i-1][j+1] ; }
		}
		cout<<"\n";
	}
	for(int i=0; i<n; i++)
	{
		for(int j=0; j<n; j++)
		{
			if(j >= ((n/2)-i) || j <= ((n/2)+i)){ cout<<mat[i][j]<<" "; }
			else{ cout<<"  "; }
		}
		cout<<"\n";
	}
	return 0;
}
